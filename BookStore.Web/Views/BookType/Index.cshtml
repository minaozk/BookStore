@model List<BookType>

@if (TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Kitap Türleri</h2>
			</div>
		</div>
	</div>
	

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Kitap Türü
			</th>
			<th></th>
			
		</tr>
		</thead>

		<tbody>
		@foreach (var bookType in Model)
		{
			<tr>

				<td>@bookType.Id</td>
				<td>@bookType.Name</td>
				<div class="w-75 btn-group" role="group">
					<td>	<a asp-controller="BookType" asp-action="Edit" asp-route-id="@bookType.Id" class="btn btn-primary">
						<i class="bi bi-pencil-square"></i> Güncelle
					</a>
					<a asp-controller="BookType" asp-action="Delete" asp-route-id="@bookType.Id" class="btn btn-danger mx-2">
						<i class="bi bi-trash-fill"></i> Sil
						</a></td>
				</div>
			</tr>
		}

		</tbody>
	</table>
	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="BookType" asp-action="Add" class="btn btn-lg btn-primary" type="button">
				Yeni Kitap Türü Oluştur
			</a>
		</div>
	</div>
</div>
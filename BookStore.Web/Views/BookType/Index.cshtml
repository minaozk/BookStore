@model List<BookType>
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Kitap Türleri</h2>
			</div>
		</div>
	</div>
	

	<table class="table table-bordered">
		<thead>
		<tr>
			<th>
				Id
			</th>
			<th>
				Kitap Türü
			</th>
		</tr>
		</thead>

		<tbody>
		@foreach (var bookType in Model)
		{
			<tr>

				<td>@bookType.Id</td>
				<td>@bookType.Name</td>
			</tr>
		}

		</tbody>
	</table>
	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="BookType" asp-action="Add" class="btn btn-lg btn-primary" type="button">
				Yeni Kitap Türü Oluştur
			</a>
		</div>
	</div>
</div>